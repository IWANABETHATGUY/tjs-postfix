{
  "name": "tjs-postfix",
  "description": "A postfix language server for typescript and javascript",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/IWANABETHATGUY/tjs-postfix"
  },
  "publisher": "IWANABETHATGUY",
  "categories": [],
  "keywords": [
    "postfix"
  ],
  "engines": {
    "vscode": "^1.44.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:vue"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tjs-postfix.ast-preview",
        "title": "preview current active editor ast",
        "category": "tjs-postfix"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "tjs-postfix",
      "properties": {
        "tjs-postfix.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "tjs-postfix.templateMapList": {
          "type": "array",
          "default": [
            {
              "snippetKey": "log",
              "functionName": "console.log"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "postinstall": "cd client && npm install && cd ..",
    "vscode:prepublish": "yarn run build",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint src --ext ts",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "build": "webpack --config webpack.config.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "cross-env": "^7.0.2",
    "electron-rebuild": "^1.11.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "ts-loader": "^8.0.12",
    "typescript": "^3.9.4",
    "vscode-test": "^1.4.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
